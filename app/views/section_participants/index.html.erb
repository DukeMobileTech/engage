<div class="row">
  <%= render partial: "sections/sidebar", locals: { site: @site, section: @section } %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mb-5">
    <h2 class="text-center"><%= link_to @site.name, site_sections_path(@site) %></h2>
    <div class="card">
      <div class="card-header">
        <p style="color: green"><%= notice %></p>
        <% content_for :title, "Section participants" %>
        <h4>Participants Enrolled In <%= @section.name %></h4>
      </div>
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Sex</th>
              <th>Age</th>
              <th>Attendance</th>
            </tr>
          </thead>
          <tbody>
            <% @section_participants.each do |sp| %>
              <tr>
                <td><%= link_to sp.participant.name, participant_path(sp.participant) %></td>
                <td><%= sp.participant.category %></td>
                <td><%= sp.participant.sex %></td>
                <td><%= sp.participant.age %></td>
                <td><%= link_to sp.attendance_str, site_section_section_participant_path(@site, @section, sp) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex flex-row-reverse">
          <%= link_to "Enroll Participants", new_site_section_section_participant_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </main>
</div>
