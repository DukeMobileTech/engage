<%= render partial: "sections/header", locals: {site: @site, section: @section } %>

<main class="mb-5">
  <div class="mb-3">
    <% content_for :title, "New sessions" %>
    <h4 class="text-center">New Sessions</h4>
    <div class="row fw-bold mb-2">
      <div class="col-lg-2">Name</div>
      <div class="col-lg-3">Date Administered</div>
      <div class="col-lg-3">Lessons</div>
      <div class="col-lg-3">Facilitators</div>
      <div class="col-lg-1">Delete</div>
    </div>

    <%= form_with(url: bulk_create_site_section_sittings_path, method: :post, data: { controller: 'sittings' }) do |form| %>
      <%= fields_for 'sittings[]', Sitting.new do |sitting_fields| %>
        <%= render "sitting_form", form: sitting_fields %>
        <template>
          <%= render "sitting_form", form: sitting_fields %>
        </template>
      <% end %>

      <div class="sittings">
        <button data-action="click->sittings#add" class="btn btn-primary">Add session</button>
      </div>

      <div class="d-flex flex-row-reverse m-1">
        <%= form.submit 'Save', class: 'btn btn-success' %>
      </div>    
    <% end %>
  </div>
</main>
