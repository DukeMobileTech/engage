<div class="sitting row border-bottom pb-2 mb-2">

  <div class="col-lg-2">
    <%#= form.label :name, class: "form-label fw-bold" %>
    <%= form.select :name, (1..30).map { |i| "Session #{i}" }, {}, { class: "form-select" } %>
  </div>

  <div class="col-lg-2">
    <%#= form.label "Date Administered", class: "form-label fw-bold" %>
    <%= form.date_field :done_on, class: "form-control", required: true %>
  </div>

  <div class="col-lg-2">
    <%#= form.label 'Lessons', class: "form-label fw-bold" %>
    <%= form.select :lesson_ids, @lessons.collect {|l| [l.title, l.id]}, {}, { class: "form-select", multiple: true } %>
  </div>

  <div class="col-lg-2">
    <%#= form.label 'Facilitators', class: "form-label fw-bold" %>
    <%= form.select :user_ids, @facilitators.collect {|u| [u.name, u.id]}, {}, { class: "form-select", multiple: true } %>
  </div>

  <div class="col-lg-2">
    <%#= form.label :completed, class: "form-label fw-bold" %>
    <%= form.check_box :completed, class: "form-check-input" %>
  </div>

  <div class="col-lg-2 d-flex align-items-end">
    <button class="btn btn-danger" type="button" data-action="sittings#remove">Remove</button>
    <%= form.hidden_field :_destroy %>
  </div>

</div>
