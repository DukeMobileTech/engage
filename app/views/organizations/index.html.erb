<div class="mb-5">
  <p style="color: green"><%= notice %></p>
  <% content_for :title, "Organizations" %>

  <h3 class="text-center">Organizations</h3>

  <table id="organizations" class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>State</th>
        <th>Urbanicity</th>
        <th>Setting</th>
        <th>Sites</th>
      </tr>
    </thead>
    <tbody>
      <% @organizations.each do |organization| %>
        <tr scope="row">
          <td><%= link_to organization.name, organization %></td>
          <td><%= organization.state %></td>
          <td><%= organization.urbanicity %></td>
          <td><%= organization.setting %></td>
          <td><%= link_to organization.sites.size, organization %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex flex-row-reverse">
    <%= link_to "New organization", new_organization_path, class: "btn btn-primary" %>
  </div>

</div>
