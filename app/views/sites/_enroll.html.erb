<%= form_with model: @site, data: { controller: 'checkbox-select-all' } do |form| %>
  <% if site.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
        <% site.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <p class="fw-bold">Search and select the participants you want enrolled on this site</p>
    <p class="fw-bold">Delete the ones you want to unenroll</p>
    <%= form.select :participant_ids,
      @participants.pluck(:name, :id),
      { include_blank: true },
      { multiple: true, data: { controller: 'slim' } } %>
  </div>

  <div class="d-flex flex-row-reverse">
    <%= form.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
