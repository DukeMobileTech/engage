<section>
  <header>
    <p style="color: green"><%= notice %></p>
    <h4>My Sites</h4>
  </header>
  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th>State</th>
          <th>County</th>
          <th>Urbanicity</th>
          <th>Setting</th>
        </tr>
      </thead>
      <tbody>
        <% @sites.each do |site| %>
          <tr scope="row">
            <td><%= link_to site.name, site %></td>
            <td><%= site.code %></td>
            <td><%= site.state %></td>
            <td><%= site.county %></td>
            <td><%= site.urbanicity %></td>
            <td><%= site.setting %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex flex-row-reverse">
    <%= link_to "Add New Site", new_site_path, class: "btn btn-primary" %>
  </div>
</section>