<%= form_for([@site, @section, @session]) do |form| %>
  <% if session.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
        <% session.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label "Date Administered", class: "form-label" %>
    <%= form.datetime_field :done_on, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :lesson_id, class: "form-label" %>
    <%= form.collection_select :lesson_id, @lessons, :id, :title, { prompt: true, required: true }, { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :completed, class: "form-label" %>
    <%= form.check_box :completed, class: "form-check-input" %>
  </div>

  <div class="d-flex flex-row-reverse">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
