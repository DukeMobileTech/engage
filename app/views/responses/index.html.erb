<div class="mb-5">
  <h3 class="text-center">Responses</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Questionnaire</th>
        <th>Participant</th>
        <th>Answers</th>
      </tr>
    </thead>
    <tbody>
      <% @responses.each do |response| %>
        <tr scope="row">
          <td><%= link_to response.questionnaire.title.titleize, response.questionnaire %></td>
          <td><%= response.participant ? (link_to response.participant&.name, response.participant) : '' %></td>
          <td><%= link_to response.answers, questionnaire_response_path(response.questionnaire, response) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex flex-row-reverse">
    <%= link_to "New response", new_questionnaire_response_path(@questionnaire), class: "btn btn-primary" %>
  </div>
</div>
