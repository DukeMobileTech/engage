<%= form_with(model: data_upload) do |form| %>
  <% if data_upload.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(data_upload.errors.count, "error") %> prohibited this data_upload from being saved:</h2>

      <ul>
        <% data_upload.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter the name of the section data upload" %>
  </div>

  <div class="mb-3">
    <%= form.label :sections, class: "form-label" %>
    <%= form.collection_check_boxes(:section_ids, @sections, :id, :name) do |b| %>
      <div class="form-check">
        <%= b.check_box(class: "form-check-input") %>
        <%= b.label(class: "form-check-label") %>
      </div>
    <% end %>
  </div>

  <div class="d-flex flex-row-reverse">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
