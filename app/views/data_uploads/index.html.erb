<div class="mb-5">
  <p style="color: green"><%= notice %></p>
  <% content_for :title, "Data Exports" %>
  <h3 class="text-center">Section Data Uploads</h3>

  <div class="row">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Reporting Period</th>
          <th>Sections</th>
        </tr>
      </thead>
      <tbody>
        <% @data_uploads.each do |upload| %>
          <tr scope="row">
            <td><%= link_to upload.name, upload %></td>
            <td><%= "#{upload.reporting_period_start} - #{upload.reporting_period_end}" %></td>
            <td><%= upload.sections.map(&:name).join(", ") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="d-flex flex-row-reverse">
    <%= link_to "New data upload", new_data_upload_path, class: "btn btn-primary" %>
  </div>
</div>
