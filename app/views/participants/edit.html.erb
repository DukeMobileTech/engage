<div class="row">
  <% content_for :title, "Editing participant" %>
  <h4 class="text-center">Editing Participant</h4>
  <%= render "form", participant: @participant %>

  <div class="m-1 d-flex justify-content-between">
    <%= link_to "Show this participant", participant_path(@participant), class: "btn btn-primary" %>
    <% if policy(@participant).merge? %>
      <%= link_to "Merge this participant", merge_participant_path(@participant), class: 'btn btn-primary' %>
    <% end %>
    <div></div>
  </div>
</div>