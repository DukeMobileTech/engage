<div class="row">
  <%= render partial: "sites/sidebar", locals: { site: @site } %>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mb-5">
    <div class="card">
      <div class="card-header">
        <p style="color: green"><%= notice %></p>
        <h4><%= @site.name %></h4>
      </div>
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>ID</th>
              <th>Category</th>
            </tr>
          </thead>
          <tbody>
            <% @participants.each do |participant| %>
              <tr>
                <td><%= link_to participant.name, site_participant_path(@site, participant) %></td>
                <td><%= participant.id %></td>
                <td><%= participant.category %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex flex-row-reverse">
          <%= link_to "Enroll New Participant", new_site_participant_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </main>
</div>
