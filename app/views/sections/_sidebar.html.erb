<div class="sidebar border border-right col-md-3 col-lg-2 p-0 bg-body-tertiary">
  <div class="offcanvas-md offcanvas-end bg-body-tertiary" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="sidebarMenuLabel"><%= @section.name %></h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body d-md-flex flex-column p-0 pt-lg-3 overflow-y-auto">
      <h6 class="mt-0 text-center"><%= @section.name %></h6>
      <ul class="nav flex-column">
        <li class="nav-item">
          <%= link_to "Details", site_section_path(@site, @section), class: "nav-link d-flex align-items-center gap-2" %>
        </li>
        <li class="nav-item">
          <%= link_to "Participants", site_section_section_participants_path(@site, @section), class: "nav-link d-flex align-items-center gap-2" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sessions", site_section_sessions_path(@site, @section), class: "nav-link d-flex align-items-center gap-2" %>
        </li>
      </ul>
    </div>
  </div>
</div>
