<div class="nested-form-wrapper row border m-1 p-1" data-new-record="<%= form.object.new_record? %>">
  <div class="col-lg-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="col-lg-2">
    <%= form.label :duration, class: "form-label" %>
    <%= form.text_field :duration, class: "form-control" %>
  </div>
  <div class="col-lg-5">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="col-lg-2 d-flex align-items-center">
    <button class="btn btn-danger" type="button" data-action="nested-form#remove">Remove lesson</button>
    <%= form.hidden_field :_destroy %>
  </div>
</div>